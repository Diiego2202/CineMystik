        <script type="text/javascript">
            
            $(document).ready(function() {

            $('.counter').each(function () {
            $(this).prop('Counter',0).animate({
            Counter: $(this).text()
            }, {
            duration: 4000,
            easing: 'swing',
            step: function (now) {
            $(this).text(Math.ceil(now));
            }
            });
            });

            });
            
            let Tela = document.getElementById("Tela");
